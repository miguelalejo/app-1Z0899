<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.0"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <description>Internet Servlet OCEJWCD</description>
    <display-name>ocejwcd</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>internalname1</servlet-name>
        <servlet-class>ec.ocejwcd.cap2.Servlet1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>color</servlet-name>
        <servlet-class>ec.ocejwcd.cap3.ColorServlet</servlet-class>
    </servlet>
    

    <servlet-mapping>
        <servlet-name>internalname1</servlet-name>
        <url-pattern>/public1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>color</servlet-name>
        <url-pattern>server.color.com</url-pattern>
    </servlet-mapping>
</web-app>